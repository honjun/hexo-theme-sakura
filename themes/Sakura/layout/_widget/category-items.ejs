<% var external_link = config.external_link ? '_blank' : '_self'; %>
<article <% if (index%2 == 0){ %> class="post-list-thumb-left" <% } %> class="post post-list-thumb post-list-show" itemscope="" itemtype="http://schema.org/BlogPosting">

  <div class="post-thumb">
    <a href="<%- url_for(post.path) %>">
      <img class="lazyload" onerror="imgError(this,3)" data-src="<%= post.photos[0] %>">
    </a>
  </div>
  <div class="post-content-wrap">
    <div class="post-content">
      <div class="post-date">
        <i class="iconfont icon-time">
        </i><%= date(post.date, 'YYYY-M-D HH:MM') %></div>
      <a href="<%- url_for(post.path) %>" class="post-title">
        <h3><%= post.title %></h3>
      </a>
      <div class="post-meta">
        <span><i class="iconfont icon-attention"></i>11 热度</span>
        <span class="comments-number">
          <i class="iconfont icon-mark"></i>
          <a href="<%- url_for(post.path) %>#respond">
          NOTHING</a>
        </span>
        <span>
          <i class="iconfont icon-file"></i>
          <% post.categories.each((category)=>{ %>
            <a href="<%- url_for(category.path) %>"><%= category.name %></a>
          <% }) %>
        </span>
      </div>
      <div class="float-content">
        <p><%= post.description %></p>
        <div class="post-bottom">
          <a href="<%- url_for(post.path) %>" class="button-normal">
            <i class="iconfont icon-caidan"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</article>